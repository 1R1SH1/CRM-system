<Application x:Class="Desktop_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop_App"
             xmlns:l="clr-namespace:Desktop_App.Views"
             xmlns:viewmodel="clr-namespace:Desktop_App.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Themes-->
                <ResourceDictionary Source="/Theme/MenuButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodel:RequestsViewModel}">
                <l:RequestsWindow/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodel:ServicesViewModel}">
                <l:ServiceWindow/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodel:ProjectViewModel}">
                <l:ProjectsWindow/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodel:BlogsViewModel}">
                <l:BlogsWindow/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodel:ContactsViewModel}">
                <l:ContactsWindow/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
