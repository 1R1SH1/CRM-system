@model IT_Consulting_CRM_Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="hform">@ViewData["Title"]</h2>

<head>
    <title></title>
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <style type="text/css">

        .btn {
            text-decoration: none;
            position: relative;
            height: 40px;
            line-height: 40px;
            padding: 0 50px 0 50px;
            margin: 0 20px;
            background: linear-gradient(-135deg, #00E5FE, #4463FE);
            border-width: 0;
            border-radius: 50px;
            font-size: 20px;
            color: white;
            outline: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <form method="post" asp-controller="Account" asp-action="Login" class="form-main" asp-antiforgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>

        <label class="lable" asp-for="Name">Username:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <br />

        <label class="lable" asp-for="Password">Password:</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <br />

        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
        <br />

        <input class="btn" type="submit" value="Вход" />
    </form>
</body>