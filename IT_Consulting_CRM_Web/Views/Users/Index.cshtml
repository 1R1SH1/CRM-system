@using IT_Consulting_CRM_Web.Models
@{
    ViewData["Title"] = "Users list";
}

<head>
    <title></title>
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
    <style type="text/css">

        .btn {
            text-decoration: none;
            position: center;
            height: 40px;
            line-height: 40px;
            padding: 0 50px 0 50px;
            margin: 0 10px;
            background: linear-gradient(-135deg, #00E5FE, #4463FE);
            border-width: 0;
            border-radius: 50px;
            font-size: 15px;
            color: white;
            outline: none;
            cursor: pointer;
        }
    </style>
</head>

<table class="simple-little-table" cellspacing='0'>
    <tr style="font-size:20px;">
        <th>Имя пользователя</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <th>@user.UserName</th>
            <th><a asp-controller="Roles" asp-action="Edit" asp-route-id="@user.Id">Уровень доступа</a></th>
            <th>
                <form class="form-simple" method="post" asp-route-id="@user.Id" asp-action="Delete" id="delButton">
                    <a href="#" onclick="document.getElementById('delButton').submit()">Удалить</a>
                </form>
            </th>
        </tr>
    }
</table>

<a class="btn" asp-action="Create">Добавить пользователя</a>