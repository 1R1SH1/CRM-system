                line-height: 40px;
                padding: 0 50px 0 50px;
                margin: 0 10px;
                background: linear-gradient(-135deg, #00E5FE, #4463FE);
                border-width: 0;
                border-radius: 50px;
                font-size: 15px;
                color: white;
                outline: none;
                cursor: pointer;
            }

            .brd {
                border: 4px double black; /*Параметры границы*/
                background: #e9e5e5; /*Цвет фона*/
                padding: 20px; /*Поля вокруг текста*/
            }

            .brd1 {
                border: 2px double black; /*Параметры границы*/
            }

            .brd-spoiler {
                border: 2px double black; /*Параметры границы*/
                width: 70em;
            }

            .spoiler-content {
