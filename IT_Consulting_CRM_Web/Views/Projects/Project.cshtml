@using IT_Consulting_CRM_Web.Models
@model IEnumerable<Projects>
@{
    ViewData["Title"] = "Projects List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style type="text/css">
        .btn {
            text-decoration: none;
            position: center;
            height: 40px;
            line-height: 40px;
            padding: 0 50px 0 50px;
            margin: 0 10px;
            background: linear-gradient(-135deg, #00E5FE, #4463FE);
            border-width: 0;
            border-radius: 50px;
            font-size: 15px;
            color: white;
            outline: none;
            cursor: pointer;
        }

        .brd {
            border: 4px double black; /*Параметры границы*/
            background: #e9e5e5; /*Цвет фона*/
            padding: 20px; /*Поля вокруг текста*/
        }

        .card:hover {
            box-shadow: -1px 9px 40px -12px #4463FE;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#!"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">ГЛАВНАЯ</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-action="Service">УСЛУГИ</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Projects" asp-action="Project">ПРОЕКТЫ</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-action="Blog">БЛОГ</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page" asp-action="Contact">КОНТАКТЫ</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row" >
        @foreach (var item in Model)
        {
            <div class="card " style="width:20em;margin:10px;">
                <img src="@item.Image" class="card-img-top" />
                <div class="card-body">
                    <div class="card-text">
                        <p>@item.ProjectInformation</p>
                    </div>
                </div>
            </div>
        };
    </div>
    <a class="btn projects-item-btn" asp-controller="Projects" asp-action="AddProject">Добавить</a>

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-1 text-center text-white">#SkillProfi &copy; 2022</p>
            <p class="m-0 text-center text-white">Все права защищены</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $('.card').hover(
            function () {
                $(this).animate({
                    marginTop: "-=1%",
                    marginBottom: "+=1%"
                }, 200)
            },
            function () {
                $(this).animate({
                    marginTop: "+=1%",
                    marginBottom: "-=1%"
                })
            }
        )
    </script>
</body>
</html>
