                    <li class="nav-item"><a class="nav-link" href="#!">БЛОГ</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">КОНТАКТЫ</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Content section-->
    <section class="py-5">
        <div class="container my-5">
            <ul class="projects-items d-flex">
                <li class="projects-item d-flex">
                    <svg class="projects-item-icon" width="80" height="78">
                        @foreach (var note in Model)
                        {
            <img src="@note.Image" />}
                    </svg>
                    <p class="projects-item-descr">
                        @foreach (var note in Model)
                        {
                         @note.ProjectInformation
                        }
                    </p>
                </li>
            </ul>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-1 text-center text-white">#SkillProfi &copy; 2022</p>
